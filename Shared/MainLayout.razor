@inherits LayoutComponentBase

@code {

    private MudThemeProvider _mudThemeProvider = new MudThemeProvider();
    bool _isDarkMode = false;
    bool _drawerOpen = true;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _isDarkMode = await _mudThemeProvider.GetSystemPreference();
            StateHasChanged();
        }
    }

    public MudTheme _myCustomTheme = new MudTheme()
    {
        Palette = new Palette()
        {
            Primary = new MudBlazor.Utilities.MudColor("#fdd835"),
            Secondary = new MudBlazor.Utilities.MudColor("#78909c"),
            AppbarBackground = new MudBlazor.Utilities.MudColor("#78909c")
        },
        PaletteDark = new Palette()
        {
            Primary = new MudBlazor.Utilities.MudColor("#fdd835"),
            Secondary = new MudBlazor.Utilities.MudColor("#78909c"),
            AppbarBackground = new MudBlazor.Utilities.MudColor("#4b636e"),
            TextPrimary = Colors.Shades.White,
            TextSecondary = Colors.BlueGrey.Lighten5,
            DrawerText = Colors.BlueGrey.Lighten5,
            Background = Colors.BlueGrey.Darken4,
            DrawerBackground = Colors.BlueGrey.Darken3,
            TableLines = Colors.BlueGrey.Darken3
        }
    };

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}

<MudThemeProvider @ref="@_mudThemeProvider" @bind-IsDarkMode="@_isDarkMode" Theme=@_myCustomTheme/>
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudSwitch @bind-Checked="@_isDarkMode" Color="Color.Primary" Class="ma-4" T="bool" Label="Light/Dark"/>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">TheToby</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
    <MudAppBar Elevation="0" Bottom="true" Fixed="true" Color="Color.Inherit" Class="d-flex justify-center align-center">
        <MudIconButton Icon="@Icons.Custom.Brands.MudBlazor" Color="Color.Inherit" Link="https://mudblazor.com/" Target="_blank" />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/TheToby1/Personal-Website/" Target="_blank" />
    </MudAppBar>
</MudLayout>    